/* pages/city_list/city_list.wxss */

/*城市数据列表  */

.city_box {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1001;
  background: #fff;
  overflow: hidden;
}

.city_title {
  width: 100%;
  height: 168rpx;
}

.city_title .address {
  display: flex;
  align-items: center;
  height: 88rpx;
  font-size: 28rpx;
  color: green;
  font-weight: bold;
  letter-spacing: 1.12rpx;
  background: rgba(0, 0, 0, 0.1);
}

.city_title .address .local {
  width: 128rpx;
  height: 44rpx;
  line-height: 44rpx;
  white-space: nowrap;
  margin-left: 20rpx;
  background: white;
}

.city_title .address .content {
  display: flex;
  justify-content: center;
  width: 380rpx;
  height: 44rpx;
  margin-left: 20rpx;
  padding: 4rpx;
  white-space: nowrap;
  line-height: 44rpx;
}

.city_title .address .content view {
  text-align: center;
  z-index: -1;
}

.city_title .address .sure {
  width: 86rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  border: 2rpx solid green;
  border-radius: 6rpx;
  margin-left: 16rpx;
  background: white;
}

.city_title .search {
  display: flex;
  align-items: center;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.3);
}

.city_title .search input {
  width: 620rpx;
  height: 48rpx;
  line-height: 48rpx;
  margin-left: 20rpx;
  padding-left: 20rpx;
  font-size: 30rpx;
  border-radius: 8rpx;
  background: white;
}

.city_content {
  overflow: hidden;
}

/*城市列表*/

.city_content .city_list {
  position: relative;
}

.city_content .city_con {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  padding-left: 30rpx;
  white-space: nowrap;
}

.city_content .city_con::before {
  content: " ";
  height: 2rpx;
  border-top: 2rpx #f5f5f5 solid;
  position: absolute;
  width: 100%;
}

.city_content .city_con::before:nth-child(1) {
  border: none;
}

/*城市选择 右边*/

.scroll_list {
  background: rgba(0, 0, 0, 0.5);
  position: absolute;
  width: 64rpx;
  color: white;
  top: 0;
  right: 0;
}

.scroll_list_chi {
  text-align: center;
  font-size: 28rpx;
}

/*显示框*/

.showwords {
  width: 80px;
  height: 80px;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  line-height: 80px;
  text-align: center;
  font-size: 10vw;
  margin: auto;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 999;
}
