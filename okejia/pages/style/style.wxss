/* pages/style/style.wxss */

page {
  background-color: #f2f3f5;
}

.style-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 20rpx;
}

.style-style {
  display: flex;
  margin-bottom: 20rpx;
  background: #fff;
  box-shadow: 0 2px 10px 0 rgba(0, 0, 0, 0.10);
  padding: 20rpx;
}

.style-style .style-content {
  width: 210rpx;
}

.style-content .name {
  width: 210rpx;
  height: 78rpx;
  color: white;
  position: relative;
}

.style-content .name .bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 210rpx;
  height: 78rpx;
}

.style-content .name .content {
  position: absolute;
  left: 0;
  top: 0;
  width: 210rpx;
  height: 78rpx;
}

.style-content .name .content .title {
  height: 48rpx;
  line-height: 48rpx;
  font-size: 28rpx;
  color: #fff;
  z-index: 11;
  text-align: center;
}

.style-content .name .content .en {
  height: 30rpx;
  line-height: 30rpx;
  font-size: 20rpx;
  color: #fff;
  z-index: 11;
  text-align: center;
}

.style-content .price {
  display: flex;
  align-items: flex-start;
  height: 48rpx;
  line-height: 48rpx;
  overflow-x: scroll;
  font-size: 24rpx;
  color: #f53a23;
  letter-spacing: 0;
  white-space: nowrap;
}

.style-content .price text {
  font-size: 20rpx;
  margin-left: 4rpx;
}

.style-content .original {
  width: 100%;
  height: 32rpx;
  line-height: 32rpx;
  overflow-x: scroll;
  white-space: nowrap;
  font-size: 18rpx;
  color: #71777d;
  letter-spacing: 0;
  text-decoration: line-through;
}

.style-content .base {
  width: 100%;
  height: 32rpx;
  line-height: 32rpx;
  font-weight: bold;
  font-size: 20rpx;
  color: #333;
}

.style-content .des {
  width: 100%;
  height: 150rpx;
}

.style-content .description {
  width: 210rpx;
  height: 150rpx;
  font-size: 18rpx;
  color: #71777d;
  letter-spacing: 0;
  display: inline-block;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.style-style .project {
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  font-size: 24rpx;
  background: #3c6ad1;
  color: #fff;
  margin-top: 6rpx;
  /* box-shadow: 6rpx 6rpx 5rpx #888; */

  box-shadow: 0 2px 10px 0 rgba(0,0,0,0.10);
}

.style-style .style-image {
  width: 440rpx;
  margin-left: 20rpx;
}

.style-image .main {
  width: 440rpx;
  height: 286rpx;
}

.style-image .second {
  margin-top: 10rpx;
  display: flex;
}

.style-image .second image {
  flex: 1;
  width: 140rpx;
  height: 110rpx;
}

.style-image .second image:nth-child(2) {
  margin-left: 10rpx;
}

.style-image .second image:nth-child(3) {
  margin-left: 10rpx;
}
