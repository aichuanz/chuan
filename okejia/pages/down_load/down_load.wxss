/*预约成功折扣弹窗*/

.order-mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 99998;
}

.order-mask .order-info {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 560rpx;
  margin: -320rpx 0 0 -280rpx;
}

.order-mask .order-des {
  width: 599rpx;
  text-align: center;
  color: #fcc707;
  font-size: 28rpx;
}

.order-mask .codeCon {
  width: 599rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.order-mask .codeCon .code {
  width: 280rpx;
  height: 280rpx;
  display: block;
}
