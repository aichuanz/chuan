/* pages/look/construction/conInfo/conInfo.wxss */
.con{
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.con .list{
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  height: 200rpx
}
.con .list .img{
  margin-right: 30rpx;
  width: 40%;
  height: 200rpx;
}
.con .list .img image{
  background-image:url('https://www.okejia.com/wx-img/img/noImg.png');
  background-repeat:no-repeat;
  background-size:100% 100%;
  width: 100%;
  height: 100%;
}
.con .list .right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  width: 58%;
}
.con .list .right view{
  font-weight: bold;
  font-size: 30rpx;
}
.con .list .right text{
  color: #0355B4;
  font-size: 26rpx;
}