/* pages/package_detail/package_detail.wxss */

page {
  background: #f4f5f7;
}

.package-detail {
  width: 100%;
  height: 100%;
}

.tab {
  width: 100%;
  height: 100%;
  position: relative;
}

.tab .tab-nav {
  display: flex;
  width: 100%;
  white-space: nowrap;
  font-size: 28rpx;
  color: #333;
  background: #fff;
}

.tab .tab-nav .tab-item {
  display: inline-block;
  width: 125rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
}

.tab-item text.active {
  color: #4675f9;
  border-bottom: 6rpx solid #4675f9;
}

.tab .residue {
  position: absolute;
  left: 30rpx;
  top: 110rpx;
  z-index: 111;
}

.tab .residue .content {
  position: relative;
}

.tab .residue .content .icon {
  width: 124rpx;
  height: 68rpx;
}

.tab .residue .content .num {
  position: absolute;
  left: 0;
  top: 0;
  width: 124rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  z-index: 115;
  font-size: 20rpx;
  color: #fff;
}

.tab-content {
  width: 100%;
  height: 470rpx;
}

.tab-content .tabImg {
  width: 100%;
  height: 470rpx;
}

.info {
  padding: 35rpx 40rpx;
  background: #fff;
  position: relative;
}

.info .title {
  display: flex;
  align-items: center;
}

.info .title .brand {
  height: 50rpx;
  font-size: 36rpx;
  color: #2b323b;
}

.info .title .home {
  width: 180rpx;
  height: 34rpx;
  line-height: 34rpx;
  margin-left: 10rpx;
  border-radius: 8rpx;
  font-size: 18rpx;
  text-align: center;
  color: #fff;
  background: #ffc801;
}

.info .price {
  display: flex;
  align-items: center;
  height: 40rpx;
  margin-top: 43rpx;
}

.info .price .sale {
  font-size: 28rpx;
  color: #f53a23;
}

.info .price .limt {
  font-size: 28rpx;
  color: #f53a23;
}

.info .price .set {
  margin-left: 14rpx;
}

.info .price .set .link {
  width: 35rpx;
  height: 40rpx;
  display: block;
}

.info .old {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 50rpx;
}

.info .old .orign {
  display: flex;
}

.info .old .orign .originPrice {
  font-size: 24rpx;
  color: #71777d;
  text-decoration: line-through;
}

.info .old .orign .save {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #f53a23;
}

.info .old .user {
  font-size: 24rpx;
}

.info .old .user .num {
  color: #f53a23;
}

.info .old .user .select {
  color: #001400;
}

.info .vr {
  position: absolute;
  right: 40rpx;
  top: 35rpx;
  width: 72rpx;
  height: 132rpx;
}

.info .vr .vrImg {
  width: 72rpx;
  height: 132rpx;
  display: block;
}

.fourItem {
  width: 100%;
  height: 160rpx;
}

.fourItem .fourItemImg {
  width: 100%;
  height: 160rpx;
}

.selectInfo {
  display: flex;
  flex-direction: column;
  padding: 28rpx 40rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.selectInfo .house {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 98rpx;
  border-bottom: 2rpx solid #d4d5d9;
}

.selectInfo .house .normal, .selectInfo .type .normal {
  font-size: 32rpx;
  color: #2b323b;
}

.selectInfo .house .homeSelect {
  display: flex;
  align-items: center;
}

.selectInfo .house .homeSelect .room {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #71777d;
}

.selectInfo .house .homeSelect .room .roomBorder {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 74rpx;
  height: 46rpx;
  border: 1rpx solid #e1e1e1;
  border-radius: 4rpx;
}

.selectInfo .house .homeSelect .room .roomBorder text {
  font-weight: bold;
  color: #2e2e2e;
}

.selectInfo .house .homeSelect .room .roomBorder image {
  width: 20rpx;
  height: 12rpx;
  margin-left: 7rpx;
}

.selectInfo .house .homeSelect .room .roomText {
  margin-left: 8rpx;
}

.selectInfo .house .homeSelect .hall, .selectInfo .house .homeSelect .toilet {
  margin-left: 20rpx;
}

.selectInfo .type {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 98rpx;
}

.selectInfo .type .houseType {
  display: flex;
  align-items: center;
}

.selectInfo .type .houseType .new {
  display: flex;
  align-items: center;
}

.selectInfo .type .houseType .new image {
  width: 30rpx;
  height: 30rpx;
}

.selectInfo .type .houseType .new text {
  font-size: 28rpx;
  color: #2b323b;
  margin-left: 20rpx;
}

.selectInfo .type .houseType .old {
  margin-left: 50rpx;
}

.activity {
  padding: 40rpx 40rpx 0 40rpx;
  background: #fff;
}

.activity image {
  width: 100%;
  height: 220rpx;
}

.comment {
  padding: 0 40rpx 24rpx 40rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.comment .userComment {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 112rpx;
  border-bottom: 2rpx solid #d4d5d9;
  font-size: 28rpx;
  color: #71777d;
}

.comment .userComment .all {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 180rpx;
  height: 46rpx;
  border: 2rpx solid #d4d5d9;
  border-radius: 100rpx;
  font-size: 24rpx;
}

.comment .commentList {
  display: flex;
  flex-direction: column;
}

.comment .commentList .userInfo {
  display: flex;
  align-items: center;
  height: 102rpx;
  font-size: 28rpx;
  color: #2b323b;
}

.comment .commentList .userInfo .avator {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.comment .commentList .userInfo .name {
  margin-left: 20rpx;
}

.comment .commentList .content {
  padding-left: 90rpx;
  padding-bottom: 20rpx;
  word-wrap: break-word;
  word-break: break-all;
  font-size: 28rpx;
  color: #333;
  letter-spacing: 0;
}

.all-set {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 98rpx;
  padding: 0 40rpx;
  background: #fff;
  margin-bottom: 140rpx;
}

.all-set .all-set-title {
  font-size: 32rpx;
  color: #2b323b;
}

.all-set .all-set-detail {
  width: 180rpx;
  height: 46rpx;
  line-height: 46rpx;
  text-align: center;
  font-size: 24rpx;
  color: #71777d;
  border: 1px solid #d4d5d9;
  border-radius: 100rpx;
}

.detail-bottom {
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 120rpx;
}

.detail-bottom .consultation {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  width: 30%;
  height: 120rpx;
  font-size: 24rpx;
  color: #2b323b;
  background: #fff;
}

.detail-bottom .appointment {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 70%;
  height: 120rpx;
  font-size: 28rpx;
  color: #fff;
  background: #f58323;
}

.detail-bottom .consultation .contactBtn1 {
  position: absolute;
  top: 20rpx;
  left: 10rpx;
  opacity: 0;
}

.detail-bottom .consultation .contactBtn2 {
