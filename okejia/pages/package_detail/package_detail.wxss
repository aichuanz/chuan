  opacity: 0;
}

.detail-bottom .consultation .contactBtn5 {
  position: absolute;
  top: 20rpx;
  left: 170rpx;
  opacity: 0;
}

.detail-bottom .consultation .contactBtn6 {
  position: absolute;
  top: 60rpx;
  left: 10rpx;
  opacity: 0;
}

.detail-bottom .consultation .contactBtn7 {
  position: absolute;
  top: 60rpx;
  left: 50rpx;
  opacity: 0;
}

.detail-bottom .consultation .contactBtn8 {
  position: absolute;
  top: 60rpx;
  left: 90rpx;
  opacity: 0;
}

.detail-bottom .consultation .contactBtn9 {
  position: absolute;
  top: 60rpx;
  left: 130rpx;
  opacity: 0;
}

.detail-bottom .consultation .contactBtn10 {
  position: absolute;
  top: 60rpx;
  left: 170rpx;
  opacity: 0;
}

.detail-bottom .consultation .contactIcon {
  width: 40rpx;
  height: 40rpx;
  display: block;
}

.detail-bottom .consultation .contactText {
  margin-top: 10rpx;
  color: #2b323b;
  font-size: 24rpx;
}

