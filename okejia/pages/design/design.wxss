/* pages/design/design.wxss */

.design .info {
  padding: 54rpx 63rpx 32rpx 63rpx;
  background: #3c6ad1;
}

.design .info .noraml {
  width: 624rpx;
  background: #fff;
  box-shadow: 0 4rpx 4rpx 0 rgba(52, 150, 155, 0.50);
  border-radius: 4rpx;
  margin-bottom: 20rpx;
}

.design .info .city {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 624rpx;
  height: 88rpx;
  background: #fff;
  box-shadow: 0 4rpx 4rpx 0 rgba(52, 150, 155, 0.50);
  border-radius: 4rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.design .info .city .title {
  margin-left: 30rpx;
}

.design .info .city .arror{
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.design .info .noraml input {
  width: 594rpx;
  height: 88rpx;
  font-size: 28rpx;
  padding-left: 30rpx;
}

.design .info .areas {
  width: 624rpx;
  height: 88rpx;
  display: flex;
  margin-bottom: 20rpx;
  border-radius: 4rpx;
}

.design .info .areas view {
  flex: 1;
  background: #fff;
  box-shadow: 0 4rpx 4rpx 0 rgba(52, 150, 155, 0.50);
  border-radius: 4rpx;
}

.design .info .areas .area {
  margin-left: 22rpx;
  position: relative;
}
.design .info .areas .area text{
  position: absolute;
  right: 10rpx;
  top: 50%;
  margin-top: -24rpx;
}
.design .info .areas view input {
  height: 88rpx;
  font-size: 28rpx;
  padding-left: 30rpx;
}

.design .info .city .type text {
  margin-right: 10rpx;
}

.design .info .agreement {
  display: flex;
  align-items: center;
  height: 50rpx;
  font-size: 24rpx;
  color: #fff;
}

.design .info .agreement .des {
  margin-left: 14rpx;
}

.design .info .apply {
  width: 624rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin-top: 40rpx;
  text-align: center;
  background: #ffc413;
  box-shadow: 0 4rpx 4prx 0 #e0ac11;
  border-radius: 4rpx;
  font-size: 28rpx;
  color: #fff;
}
.design .info .concat{
  margin-top: 24rpx;
  font-size: 24rpx;
color: #FFFFFF;
}
