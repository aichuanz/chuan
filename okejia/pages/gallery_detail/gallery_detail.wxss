/* pages/gallery_detail/gallery_detail.wxss */

.gallery_detail {
}

.gallery_detail .tab-content {
  width: 100%;
  height: 950rpx;
}

.gallery_detail .tab-content .item {
  position: relative;
}

.gallery_detail .tab-content .item .tabImg {
  width: 100%;
  height: 950rpx;
  display: block;
}

.gallery_detail .tab-content .item .imgName {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  padding-left: 40rpx;
  margin-bottom: 20rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.02);
}

.gallery_detail .changeImg {
  height: 256rpx;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  background: #f7f7f7;
}

.gallery_detail .changeImg .tab-nav {
  height: 256rpx;
}

.gallery_detail .changeImg .tab-nav .tab-item {
  display: inline-block;
  margin-top: 44rpx;
  margin-left: 20rpx;
  border-radius: 10rpx;
}

.gallery_detail .changeImg .tab-nav .tab-item .itemImg {
  width: 160rpx;
  height: 160rpx;
  display: block;
  border-radius: 10rpx;
}

.active {
  border: 2rpx solid rgba(0, 0, 0, 0.5);
  box-shadow: 0 4rpx 4rpx 0 rgba(0, 0, 0, 0.5);
}
